# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

->      /api                        api.Routes

# Home page
GET     /                           controllers.Application.index

#POST	/upload						controllers.Application.upload(ticketId:ObjectId)


# Computers list (look at the default values for pagination parameters)
GET     /computers                  controllers.Application.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
# Add computer
GET     /computers/new              controllers.Application.create
POST    /computers                  controllers.Application.save
# Edit existing computer
GET     /computers/:id              controllers.Application.edit(id:ObjectId)
POST    /computers/:id              controllers.Application.update(id:ObjectId)
# Delete a computer
POST    /computers/:id/delete       controllers.Application.delete(id:ObjectId)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
